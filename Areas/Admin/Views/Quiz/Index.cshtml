@model IEnumerable<Agrotools.Models.Quiz>

@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<h1>Index</h1>

<p>
	<a class="btn btn-purple" href="/Admin/Quiz/Create">Criar questionário</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Título
			</th>
			<th>
				Descrição
			</th>
			<th>
				Data do cadastro
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedAt)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Respostas</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
